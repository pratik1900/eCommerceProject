<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="../../css/main.css">
<script src="https://kit.fontawesome.com/547e6c3ce4.js" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>

<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <% if (orders.length <= 0) { %>
        <h1>Nothing there!</h1>
    <% } else { %>
        <% orders.forEach(order => { %>
            <div class="card mb-5">
                <div class="card-header">
                    Order - # <%= order._id %>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-muted">Items Ordered:</h5>
                    <% order.products.forEach(p => { %>
                        <p class="card-text my-2"><%= p.product.title %> (<%= p.quantity %>)</p>
                        <% let reviewedBefore = false %>

                        <% Product.findById(p.product._id).then(prodObj => { %>
                            <% prodObj.populate('reviews').execPopulate().then(populatedProd => { %>
                                <% if(populatedProd.reviews.length !== 0){ %>
                                    <% populatedProd.reviews.forEach(review => { %>
                                        <% if(review.author.id.toString() === loggedInUser._id.toString() ) { %>
                                            <% console.log('BONGOOOOO!!') %>
                                            <% reviewedBefore = true %>
                                        <% } %>
                                    <% }) %>
                                <% } %>
                            <% }).then(result => { %>
                                <% if(!reviewedBefore) { %>
                                    <% console.log('PING!!') %>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#exampleModal<%= p.product._id %>">
                                        Rate Product
                                    </button>
                                    <!-- Modal (RATING & Review) -->
                                    <div class="modal fade" id="exampleModal<%= p.product._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel"><%= p.product.title %></h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <!-- Rating Box -->
                                                    <div class="rating-box">
                                                        <h3>Rate the Product</h3>
                                                        <div class="ratings d-flex flex-row justify-content-around">
                                                            <i class="far fa-star"></i>
                                                            <i class="far fa-star"></i>
                                                            <i class="far fa-star"></i>
                                                            <i class="far fa-star"></i>
                                                            <i class="far fa-star"></i>
                                                        </div>
                                                    </div>
                                                    <!-- Review Form -->
                                                    <form action="/products/rate" method="POST">
                                                        <div class="form-group">
                                                            <textarea class="form-control" type="text" placeholder="Write a Review (Optional)" name="reviewContent" rows="10" cols="100"></textarea>
                                                        </div>
                                                        <input type="hidden" name="productId" id="productId" value="<%=p.product._id%>">
                                                        <input type="hidden" name="productRating" id="productRating" value="0">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                        <div class="form-group text-center">
                                                            <button type="submit" class="btn btn-primary">Rate</button>
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% console.log('PING2!!') %>
                                <% } else { %>
                                    <button disabled type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#exampleModal<%= p.product._id %>">
                                        Rate Product
                                    </button>
                                <% } %>
                            <% }) %>
                            <% }).catch(err => next(err)) %>
                        <% }) %>
                        <a href="/orders/<%= order._id %>" target="_blank" class="btn btn-sm btn-primary">Invoice</a>
                </div>
            </div>
        <% }); %>
    <% } %>
</main>
<script src="../../js/ratingSystem.js"></script>
<%- include('../includes/end.ejs') %>