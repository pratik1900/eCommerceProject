<%- include('../includes/head.ejs') %>
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="container">
            <div class="row">
                <div class="col-sm-4 mx-auto mt-3">
                    <% if(errorMessage && errorMessage.length > 0) { %> 
                        <div class="alert alert-danger text-center"><%= errorMessage %></div>
                    <% } %>
                    <form action="/signup" method="POST" novalidate>
                        <div class="form-group">
                            <label for="username"><h3>Username</h3></label>
                            <input
                                class="form-control <%= validationErrors && validationErrors.username? 'invalid' : '' %>" 
                                type="text" 
                                name="username" 
                                id="username" 
                                value="<%= oldInput.username %>"
                            >
                            

                            <label for="email"><h3>E-Mail</h3></label>
                            <input
                                class="form-control <%= validationErrors && validationErrors.email? 'invalid' : '' %>" 
                                type="email" 
                                name="email" 
                                id="email" 
                                value="<%= oldInput.email %>"
                            >
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group">
                            <label for="password"><h3>Password</h3></label>
                            <input
                                class="form-control <%= validationErrors && validationErrors.password? 'invalid' : '' %>" 
                                type="password" 
                                name="password" 
                                id="password" 
                                value="<%= oldInput.password %>"
                            >
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword"><h3>Confirm Password</h3></label>
                            <input
                                class="form-control <%= validationErrors && validationErrors.confirmPassword? 'invalid' : '' %>" 
                                type="password" 
                                name="confirmPassword" 
                                id="confirmPassword" 
                                value="<%= oldInput.confirmPassword %>"
                            >
                        </div>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="text-center">
                            <button class="btn btn-lg btn-primary" type="submit">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
<%- include('../includes/end.ejs') %>